@model Sinav.Models.Entities.News

@{
    ViewData["Title"] = "Actualizar Noticia";
}

<div class="row px-4 offset-1 border mt-5 rounded">
    <h2 class="mt-3">Actualizar noticia</h2>
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <form method="post" asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="container col-12 mt-4">
                        <div class="row">
                            <div class="col-md-8">

                                <div class="form-group row">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Nombre" />
                                            <label asp-for="Name">Nombre</label>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <textarea asp-for="Description" class="form-control" aria-required="true" placeholder="Descripcion"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-6">
                                        <div>
                                            <label>Activo</label>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Status" />
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-12">
                                        <div class="form-floating mb-3">
                                            <input type="file" name="files" id="upFile" class="form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-2 mb-4">
                            <div class="col-md-3 ">
                                <button type="submit" class="btn btn-outline-success form-control" asp-route-id="@Model.Id">Actualizar</button>
                            </div>
                            <div class="col-md-3 ">
                                <a asp-action="Index" class="btn btn-outline-primary form-control">Regresar</a>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="col-md-4">
                <div>
                    <div class=" pt-3 d-flex justify-content-center align-items-center">
                        <img src="@Model.ImageUrl" style="max-width: 100%; height: 190px; border-radius:5px; border:1px solid #bbb9b9" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.tiny.cloud/1/qukxrn62f4bz0iv6z7enaelkkzuzugir28y709xit9xm659s/tinymce/5/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'lists',
            menubar: 'file edit format'
        });
    </script>
}