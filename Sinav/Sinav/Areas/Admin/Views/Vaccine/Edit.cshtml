@model Sinav.Models.ViewModels.VaccineVM

@{
    ViewData["Title"] = "Actualizar vacuna";
}

<form method="post" asp-action="Edit">
    <div class="row px-4 offset-1 border mt-5 rounded">
        <h2 class="mt-3">Actualizar vacuna</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">

            <div class="form-group row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Vaccine.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Vacuna" />
                        <label asp-for="Vaccine.Name">Vacuna</label>
                        <span asp-validation-for="Vaccine.Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Vaccine.Description" class="form-control" aria-required="true" placeholder="Descripcion" />
                        <label asp-for="Vaccine.Description">Descripcion</label>
                        <span asp-validation-for="Vaccine.Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        @Html.DropDownListFor(m => m.Vaccine.SupplierId, Model.SupplierList,
                        "-Selecciona el proveedor-", new {@class = "form-control"})
                    </div>
                </div>
            </div>

            <div class="form-group row m-3">
                <div class="col">
                    <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Vaccine.Id">Actualizar</button>
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-success form-control">Regresar</a>
                </div>
            </div>

        </div>
    </div>
</form>
