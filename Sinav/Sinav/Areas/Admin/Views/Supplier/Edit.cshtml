@model Sinav.Models.Entities.Supplier

@{
    ViewData["Title"] = "Actualizar Proveedor";
}

<form method="post" asp-action="Edit">
    <div class="row px-4 offset-1 border mt-5 rounded">
        <h2 class="mt-3">Actualizar proveedor</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 mt-4">

            <div class="form-group row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Nombre" />
                        <label asp-for="Name">Nombre</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Nit" class="form-control" aria-required="true" placeholder="Nit" />
                        <label asp-for="Nit">Nit</label>
                        <span asp-validation-for="Nit" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Phone" class="form-control" aria-required="true" placeholder="Telefono" />
                        <label asp-for="Phone">Telefono</label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Address" class="form-control" aria-required="true" placeholder="Direccion" />
                        <label asp-for="Address">Direccion</label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" aria-required="true" placeholder="Email" />
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-2 mb-4">
                <div class="col-md-3 ">
                    <button type="submit" class="btn btn-outline-success form-control" asp-route-id="@Model.Id">Actualizar</button>
                </div>
                <div class="col-md-3 ">
                    <a asp-action="Index" class="btn btn-outline-primary form-control">Regresar</a>
                </div>
            </div>

        </div>
    </div>
</form>
