@model Sinav.Models.Entities.News


@{
    ViewData["Title"] = "News detail";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header ">
            <div class="bg-light text-dark row">
                <div class="col-12 col-md-6">
                    <h3 class="text-primary">@Model.Name</h3>
                </div>
            </div>
        </div>
        <div class="card-body row">
            <div class="col-12 col-md-6">
                <p class="text-secondary">@Html.Raw(Model.Description)</p>
            </div>
            <div class="col-12 col-md-6 text-md-right">
                <img src="@Model.ImageUrl" class="img-fluid" />
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" class="btn btn-outline-primary btn-sm">Return</a>
                </div>
            </div>
        </div>
    </div>
</div>

