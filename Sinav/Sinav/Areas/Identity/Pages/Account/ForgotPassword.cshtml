@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container" style="margin-top:100px; margin-left:10px">
    <div class="row col-12 " style="background-color:#F8F9F9">
        <div class="col-md-6 border rounded">
            <div class="col-md-12 px-4 mt-4 mb-4">
                <h2>¿Olvidaste tu contraseña?</h2>
                <hr />
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Ingresa correo electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Enviar</button>
                </form>
            </div>
        </div>
        <div class="col-md-6">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
