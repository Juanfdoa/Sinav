@model Sinav.Models.ViewModels.HomeVM

<div id="carouselExampleControls" class="carousel slide sliderContainer" data-bs-ride="carousel">
    <div class="carousel-inner" style="margin-top:20px">
        @{
            int cont = 0;
            @foreach (var item in Model.sliders)
            {
                @if (item.Status == true)
                {
                    var itemDinamico = cont++ == 0 ? "active" : "";
                    <br />
                    <div class="carousel-item  @itemDinamico">
                        <img src="@Url.Content(item.ImageUrl)" class="imagen-fondo"  alt="@Html.Raw(item.Name)">
                    </div>
                }
            }
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>